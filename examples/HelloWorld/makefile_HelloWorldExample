CPP= g++
CPPFLAGS = -c -Wall -fpic -m64 -std=c++0x
LN= g++
AR=ar
LDFLAGS = -m64

INCLUDES= -I.

LIBS= -lfastcdr

DIRECTORIES= output.dir output/TARGET_TO_SUBSTITUTE.dir lib.dir lib/TARGET_TO_SUBSTITUTE.dir bin.dir bin/TARGET_TO_SUBSTITUTE.dir

all: $(DIRECTORIES) HelloWorld


HelloWorld_TARGET= lib/TARGET_TO_SUBSTITUTE/libHelloWorld.so
HelloWorld_TARGET_Z= lib/TARGET_TO_SUBSTITUTE/libHelloWorld.a
HelloWorld_EXAMPLE_TARGET = bin/TARGET_TO_SUBSTITUTE/HelloWorld

HelloWorld_SRC_CPPFILES= HelloWorld.cpp HelloWorldSer.cpp

HelloWorld_OBJS = $(HelloWorld_SRC_CPPFILES:%.cpp=output/TARGET_TO_SUBSTITUTE/%.o)

OBJS+= $(HelloWorld_OBJS)

HelloWorld: $(HelloWorld_TARGET) $(HelloWorld_TARGET_Z) $(HelloWorld_EXAMPLE_TARGET)

$(HelloWorld_TARGET): $(HelloWorld_OBJS)
	$(LN) $(LDFLAGS) -shared -o $(HelloWorld_TARGET) $(HelloWorld_OBJS) $(LIBS)

$(HelloWorld_TARGET_Z): $(HelloWorld_OBJS)
	$(AR) -cru $(HelloWorld_TARGET_Z) $(HelloWorld_OBJS)
	
$(HelloWorld_EXAMPLE_TARGET): output/TARGET_TO_SUBSTITUTE/HelloWorldExample.o
	$(LN) $(LDFLAGS) -o $(HelloWorld_EXAMPLE_TARGET) output/TARGET_TO_SUBSTITUTE/HelloWorldExample.o -Wl,-Bstatic $(LIBS) -Llib/TARGET_TO_SUBSTITUTE -lHelloWorld -Wl,-Bdynamic


output/TARGET_TO_SUBSTITUTE/%.o:%.cpp
	$(CPP) $(CPPFLAGS) $(INCLUDES) $< -o $@

.PHONY: HelloWorld

clean:
	@rm -f $(OBJS)

%.dir : 
	@echo "Checking directory $*"
	@if [ ! -d $* ]; then \
		echo "Making directory $*"; \
		mkdir -p $* ; \
	fi;
